{
  "extends": "../ts/tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "types": [
      "node",
      "cypress",
      "cypress-real-events"
    ], /* Type declaration files to be included in compilation. */
    "importsNotUsedAsValues": "remove",
    "lib": ["DOM"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress/**/*.ts"
  ],
  "files": [
    "./../ts/index.d.ts", "./index.d.ts"
  ]
}
